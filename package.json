{
  "name": "@stoplight/scripts",
  "version": "0.0.0",
  "description": "Scripts that help when creating, testing, releasing, and linting libraries.",
  "keywords": [],
  "sideEffects": false,
  "homepage": "https://github.com/stoplightio/scripts",
  "bugs": "https://github.com/stoplightio/scripts/issues",
  "author": "Stoplight <support@stoplight.io>",
  "repository": {
    "type": "git",
    "url": "https://github.com/stoplightio/scripts.git"
  },
  "license": "Apache-2.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/bin",
    "/dist",
    "/templates",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json",
    "release.js",
    "jest-preset.js",
    "jest.config.js",
    "rollup.config.js",
    "tsconfig.json",
    "tslint.json",
    "!__tests__"
  ],
  "oclif": {
    "commands": "./dist/commands",
    "bin": "sl-scripts",
    "plugins": [
      "@oclif/plugin-help"
    ]
  },
  "engines": {
    "node": ">=8.3.0"
  },
  "bin": {
    "sl-scripts": "./bin/run"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc --module commonjs",
    "postbuild": "oclif-dev manifest && oclif-dev readme",
    "test": "jest",
    "test.watch": "jest --watch",
    "test.prod": "yarn lint && yarn test --coverage --maxWorkers=2",
    "test.update": "yarn test --updateSnapshot",
    "lint": "tslint --project tsconfig.json -t codeFrame 'src/**/*.ts'",
    "lint.fix": "yarn lint --fix",
    "commit": "git-cz",
    "release": "semantic-release",
    "postpack": "rm -f oclif.manifest.json",
    "prepack": "rm -rf dist && yarn build"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}$": [
      "yarn lint.fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@oclif/command": "^1.5.16",
    "@oclif/config": "^1.13.2",
    "@oclif/plugin-help": "^2.2.0",
    "@semantic-release/commit-analyzer": "^6.2.0",
    "@semantic-release/git": "^7.0.16",
    "@semantic-release/github": "^5.4.2",
    "@semantic-release/npm": "^5.1.13",
    "@semantic-release/release-notes-generator": "^7.2.1",
    "cli-ux": "^5.3.1",
    "commitizen": "3.1.1",
    "cz-conventional-changelog": "2.1.x",
    "esm": "^3.2.25",
    "husky": "^3.0.0",
    "inquirer": "^6.5.0",
    "lint-staged": "^9.2.0",
    "rimraf": "2.6.3",
    "rollup": "^1.16.7",
    "rollup-plugin-terser": "^5.1.1",
    "rollup-plugin-typescript2": "^0.22.0",
    "semantic-release": "^15.13.18",
    "shelljs": "^0.8.3",
    "tslib": "^1.10.0"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1.22",
    "@types/inquirer": "^6.0",
    "@types/jest": "^24.0",
    "@types/lodash": "^4.14",
    "@types/node": "^12.6",
    "@types/shelljs": "^0.8",
    "jest": "^24.8",
    "lodash": "^4.17",
    "ts-jest": "^24.0",
    "ts-node": "^8.3",
    "tslint-config-stoplight": "~1.3",
    "typescript": "3.5.3"
  }
}

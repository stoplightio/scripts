{
  "name": "",
  "version": "0.0.0",
  "description": "",
  "keywords": [],
  "sideEffects": false,
  "homepage": "",
  "bugs": "",
  "author": "",
  "repository": {
    "type": "git",
    "url": ""
  },
  "license": "UNLICENSED",
  "main": "src/index.ts",
  "files": ["**/*"],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "sl-scripts build",
    "bundle": "sl-scripts bundle",
    "commit": "git-cz",
    "lint": "yarn prettier.check && yarn eslint.check",
    "lint.fix": "yarn prettier.fix; yarn eslint.fix",
    "eslint.check": "eslint --ext .js,.jsx,.ts,.tsx .",
    "eslint.fix": "eslint --ext .js,.jsx,.ts,.tsx . --fix",
    "prettier.check": "prettier --ignore-path .eslintignore --check '**/*.{js,jsx,ts,tsx,md}'",
    "prettier.fix": "prettier --ignore-path .eslintignore --write '**/*.{js,jsx,ts,tsx,md}'",
    "test": "jest",
    "test.prod": "yarn lint && yarn test --coverage --maxWorkers=2",
    "test.update": "yarn test --updateSnapshot",
    "test.watch": "yarn test --watch",
    "yalc": "yarn build && (cd dist && yalc push)",
    "yalc.watch": "nodemon --watch 'src/**/*' --exec 'yarn yalc'"
  },
  "peerDependencies": {},
  "dependencies": {},
  "devDependencies": {
    "@stoplight/eslint-config": "^1.1.0",
    "@stoplight/scripts": "4.x.x",
    "@types/jest": "24.x.x",
    "@typescript-eslint/eslint-plugin": "~2.27.0",
    "@typescript-eslint/parser": "~2.27.0",
    "jest": "24.x.x",
    "nodemon": "1.x.x",
    "prettier": "1.x.x",
    "ts-jest": "24.x.x",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "eslint-plugin-simple-import-sort": "^5.0.2",
    "typescript": "3.3.x"
  },
  "lint-staged": {
    "*.{ts,tsx}$": ["yarn lint.fix", "git add"]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": ["@commitlint/config-conventional"]
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "all"
  }
}

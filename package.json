{
  "name": "@stoplight/scripts",
  "version": "0.0.0",
  "description": "Scripts that help when creating, testing, releasing, and linting libraries.",
  "keywords": [],
  "sideEffects": false,
  "homepage": "https://github.com/stoplightio/scripts",
  "bugs": "https://github.com/stoplightio/scripts/issues",
  "author": "Stoplight <support@stoplight.io>",
  "repository": {
    "type": "git",
    "url": "https://github.com/stoplightio/scripts.git"
  },
  "license": "Apache-2.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/bin",
    "/dist",
    "/templates",
    "/vendor",
    "/npm-shrinkwrap.json",
    "/oclif.manifest.json",
    "release.js",
    "jest-preset.js",
    "jest.config.js",
    "rollup.config.js",
    "tsconfig.json",
    "tslint.json",
    "!__tests__"
  ],
  "oclif": {
    "commands": "./dist/commands",
    "bin": "sl-scripts",
    "plugins": [
      "@oclif/plugin-help"
    ]
  },
  "engines": {
    "node": ">=16"
  },
  "bin": {
    "sl-scripts": "./bin/run"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc --module commonjs",
    "postbuild": "oclif-dev manifest && oclif-dev readme",
    "test": "jest",
    "test.watch": "jest --watch",
    "test.prod": "yarn lint && yarn test --coverage --maxWorkers=2",
    "test.update": "yarn test --updateSnapshot",
    "lint": "tslint --project tsconfig.json -t codeFrame 'src/**/*.{ts,tsx}'",
    "lint.fix": "yarn lint --fix",
    "commit": "git-cz",
    "release": "semantic-release",
    "postpack": "rm -f oclif.manifest.json",
    "prepack": "rm -rf dist && yarn build"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}$": [
      "yarn lint.fix"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "@commitlint/cli": "17.0.0",
    "@commitlint/config-conventional": "8.3.4",
    "@oclif/command": "1.5.19",
    "@oclif/config": "1.14.0",
    "@oclif/plugin-help": "2.2.3",
    "@rollup/plugin-commonjs": "^19.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/pluginutils": "4.x",
    "@semantic-release/commit-analyzer": "10.0.0",
    "@semantic-release/git": "9.0.0",
    "@semantic-release/github": "7.0.4",
    "@semantic-release/npm": "9.0.0",
    "@semantic-release/release-notes-generator": "11.0.0",
    "cli-ux": "5.4.4",
    "commitizen": "~4.2.5",
    "cz-conventional-changelog": "3.1.x",
    "esm": "^3.2.25",
    "estree-walker": "2.x",
    "find-up": "^4.1.0",
    "husky": "4.3.7",
    "inquirer": "7.0.4",
    "lint-staged": "10.0.7",
    "magic-string": "0.25.x",
    "rimraf": "3.0.2",
    "rollup": "^2.47.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "semantic-release": "19.0.0",
    "shelljs": "0.8.x",
    "tslib": "^2.2.0"
  },
  "devDependencies": {
    "@oclif/dev-cli": "1.22.2",
    "@types/inquirer": "6.5.0",
    "@types/jest": "25.1.2",
    "@types/lodash": "4.14.149",
    "@types/node": "13.7.1",
    "@types/shelljs": "0.8.6",
    "jest": "25.1.0",
    "lodash": "4.x.x",
    "ts-jest": "25.2.0",
    "ts-node": "8.6.2",
    "tslint-config-stoplight": "1.3.0",
    "typescript": "3.7.5"
  }
}
